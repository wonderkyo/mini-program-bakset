/* components/hisCard.wxss */
.orderid-style {
  background: linear-gradient(to right, rgb(50, 205, 50, 0.8), #fff);
  border-radius: 15rpx;
  line-height: 30px;
  padding: 0 15px;
  width: 250rpx;
  margin-bottom: 5px;
  color: white;
  font-weight: 700;
}
.card{
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.1); /* 设置阴影 */
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mycard-flex{
  display: flex;
  align-items: flex-start;
}
.mycard-flex-center{
  display: flex;
  align-items: center;
}
.text14{
  font-size: 14px;
  line-height: 1.5em;
}